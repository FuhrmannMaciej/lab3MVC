@model lab3MVC.Models.FormModel
@{
    ViewData["Title"] = "Form";
}

<h1 class="display-4">Formularz</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Form" method="post">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfRepetitions" class="control-label"></label>
                <input asp-for="NumberOfRepetitions" class="form-control" />
                <span asp-validation-for="NumberOfRepetitions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
